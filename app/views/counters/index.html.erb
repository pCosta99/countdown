<p style="color: green"><%= notice %></p>

<h1>Counters</h1>

<%= turbo_frame_tag dom_id(Counter.new) %>

<%= turbo_frame_tag "counters" do %>
  <div id="counters">
    <% @counters.each do |counter| %>
      <%= turbo_frame_tag counter do %>
        <%= render counter %>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= link_to "New counter", new_counter_path, data: { turbo_frame: dom_id(Counter.new) } %>
